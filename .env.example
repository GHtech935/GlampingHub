# Database
DATABASE_URL=postgresql://user:password@host:5432/database

# JWT & Session
# IMPORTANT: Use the SAME JWT_SECRET as CampingHub-App for shared staff login
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
SESSION_COOKIE_NAME=glampinghub_session

# Email (Brevo)
BREVO_API_KEY=your_brevo_api_key_here
FROM_EMAIL=noreply@glampinghub.com

# Google Maps
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Cloudinary (Image Upload)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Social OAuth
GOOGLE_OAUTH_CLIENT_ID=your_google_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# App Configuration
NEXT_PUBLIC_BASE_URL=https://glampinghub.your-domain.com
NODE_ENV=production
